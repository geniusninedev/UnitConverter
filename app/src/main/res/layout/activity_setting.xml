<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTextSetting"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Number Format"
                android:textColor="@color/colorwhitetext"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                />
        </LinearLayout>
       <LinearLayout
         android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="40dp">
       <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:id="@+id/radioGroupNumberFormat">


        <RadioButton
            android:id="@+id/RadioNumberFormatDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decimal Format "
            android:textSize="16dp"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Example : 1234.00"
            android:textSize="15dp"
           />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTextBlack" />

        <RadioButton
            android:id="@+id/RadioNumberFormatSeperator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:text="Thousands separator" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Example : 1,234.00"
        android:textSize="15dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTextBlack" />

        <RadioButton
            android:id="@+id/RadioNumberFormatScientific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Exponential Format" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Example : 3.21E+25"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"/>
</RadioGroup>
</LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTextSetting"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Decimal Places"
                android:textColor="@color/colorwhitetext"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
              />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:text="Decimal Places(0-10)"
                android:textColor="@color/colorTextBlack"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/seekBarDecimalPlaces"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="10"
                android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textViewDecimalPlacesvalues"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>











</LinearLayout>